{% extends "AppBundle::main_layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block content %}

    {% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="navbar-form" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
        <label for="username">Username</label>
        <input type="text" id="username" name="_username" class="form-control" placeholder="Email" value="{{ last_username }}" required="required" />
    </div>
    <br>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="_password" required="required" placeholder="Password" class="form-control" style="background-image: url(&quot;data:image/png;base64,&quot;); background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; background-repeat: no-repeat;" autocomplete="off">
    </div>
    <br>
    <button type="submit" class="btn btn-success">Sign in</button>
</form>

{% endblock %}
